*
	box-sizing border-box

a
	color #000
	
	&:hover
		color red

$dib
	display inline-block

$db
	display block

$pr
	position relative

.menu
	margin-top 50px
	border 1px solid #000
	text-align right
	
	@extend $pr

	&__btn
		width 50px
		height 50px
		border-radius 3px
		border 1px solid #000
		text-align center
		padding 4px
		font-size 0
		cursor pointer
		
		@extend $dib

	&__strip
		width 40px
		height 5px
		background-color #000
		border-radius 2px
		margin 4px 0
		
		@extend $dib

	&__list
		text-align center
		overflow hidden
		position absolute
		top 100%
		left 0
		width 100%
		height 0
		border-left 1px solid #000
		border-right 1px solid #000
		
		@extend $db
		
		&.open
			height auto
		
	&__item
		font-size 20px

		@extend $pr
		@extend $db
		
		span
			padding 10px
		
	&__second
		&-list
			width 100%
			top 100%
			overflow hidden
			height 0

			@extend $pr
			@extend $db
			
			&.open
				height auto
			
		&-item
			border-radius 3px
			font-size 18px
			
			@extend $pr
			@extend $db
			
	
	&__third
		&-list
			width 100%
			top 100%
			overflow hidden
			height 0
			
			@extend $pr
			@extend $db
			
			&.open
				height auto
			
		&-item
			font-size 16px
			font-weight bold
			
			@extend $pr
			@extend $db
	
	&__fourth
		&-list
			width 100%
			top 100%
			overflow hidden
			height 0
			
			@extend $pr
			@extend $db
			
			&.open
				height auto
			
		&-item
			font-size 14px
			font-weight normal
			
			@extend $db

li
	span
	a
		padding 5px
		border-top 1px solid #000
		border-bottom 1px solid #000
		border-top none
		cursor pointer

		@extend $db

@media (min-width 980px)

	$dib
		display inline-block
	
	li span
		border none

	.menu
		&__btn
			display none
		
		&__list
			display table
			position relative
			height auto
			overflow auto
			border none
		
		&__item
			display table-cell
			
			> span
				border-right 1px solid #000
			
			&:last-child
				> span
					border-right none
		
		&__second
			&-list
				position absolute
				border-radius 10px
				border 1px solid #000
				top 130%
				display none
				overflow visible
				width auto
				left 0
				
				&:after
					content ''
					width 15px
					height 15px
					border-top 1px solid #000
					border-right 1px solid #000
					transform rotate(-45deg)
					transform-origin left top
					position absolute
					top -1px
					left 20px
					background-color #fff
					
					@extend $dib
				
				.menu__item:last-child &
					right 0
					left auto
					
					&:after
						left 40px

				&.open
					@extend $dib
			
			&-item
				> span
					border-bottom 1px solid #000
				
				&:last-child
					> span
						border-bottom none
				
				> span
					padding-right 50px

				&:after
					content ''
					width 0
					height 0
					border-top 10px solid transparent
					border-bottom 10px solid transparent
					border-left 10px solid #000
					position absolute
					right 15px
					top 0
					bottom 0
					margin auto
					
					@extend $dib

		&__third
			&-list
				display none
				position absolute
				left 110%
				width auto
				column-count 2
				column-width 50%
				border 1px solid #000
				top 0
				overflow visible
				padding 10px
				
				&:before
					content ''
					width 15px
					height 15px
					border-top 1px solid #000
					border-left 1px solid #000
					transform rotate(-45deg)
					transform-origin left bottom
					position absolute
					top 20px
					left -1px
					background-color #fff
				
					@extend $dib
				
				&.open
					@extend $dib
				
			&-item
				vertical-align top
				padding 5px
				
				@extend $dib

		&__fourth
			&-list
				height auto
			
				@extend $dib
			
			&-item
				> a
					padding 3px 0
					border none
		
		&__item:nth-child(5)
		&__item:nth-child(6)
		&__item:nth-child(7)
			.menu__second
				&-item
					&:after
						border-top 10px solid transparent
						border-bottom 10px solid transparent
						border-left none
						border-right 10px solid #000
						left 15px
						right auto
					
					> span
						padding-right 10px
						padding-left 50px

			.menu__third
				&-list
					right 110%
					left auto
					
					&:before
						right -1px
						left auto
						transform-origin right bottom
						transform rotate(45deg)
						border-left none
						border-right 1px solid #000

@media (min-width 1230px)
	.menu
		&__third
			&-list
				column-count 3
				column-width 50%